
params {
    // snippy params
    minmap = "60"
    mincov = "10"
    basequal = "13"
    minqual = "100"
    minfrac = "0"
    // ska params
    ska_minfreq = "0.9"
    ska_alnargs = ""
    ska2_kszise = "31"
    // tools to use
    use_kraken2 = false
    kraken2_db = ""
    assembler = "shovill"
    mask = "no_mask"
    mlst_exclude = ""
    mobsuite_db = "no_db"
    gubbins = false
    
}

conda {
   useMamba = true
}

profiles {

   lcl {
      params.publish_dir_mode = 'copy'
      executor {
         name = 'local'
         cpus = 64
      }
      process {
      
        withLabel: process_low {
             cpus= 1
          }
        withLabel: process_medium {
           cpus= 4
        }
        withLabel: process_high {
           cpus= 8
        }
      }
    }
   mdu_binfie {
      params.publish_dir_mode = 'link'
      params.mlst_exclude = 'ecoli,abaumannii'
      params.conda_path = '/home/mdu/conda/envs'
      executor {
         name = 'local'
         cpus = 256
      }
      process {
      
        withLabel: process_low {
             cpus= 1
          }
        withLabel: process_medium {
           cpus= 4
        }
        withLabel: process_high {
           cpus= 8
        }
      }
    }
    apg_binfie {
      params.publish_dir_mode = 'link'
      params.mlst_exclude = 'ecoli,abaumannii'
      params.conda_path = '/opt/conda/envs'
      executor {
         name = 'local'
         cpus = 100
      }
      process {
      
        withLabel: process_low {
             cpus= 1
          }
        withLabel: process_medium {
           cpus= 4
        }
        withLabel: process_high {
           cpus= 8
        }
      }
    }
   mdu_research {
      params.publish_dir_mode = 'link'
      executor {
         name = 'local'
         cpus = 72
      }
      process {
      
        withLabel: process_low {
             cpus= 1
          }
        withLabel: process_medium {
           cpus= 4
        }
        withLabel: process_high {
           cpus= 8
        }
      }
    }
 }
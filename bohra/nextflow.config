
params {
    // snippy params
    minmap = "60"
    mincov = "10"
    basequal = "13"
    minqual = "100"
    minfrac = "0"
    // ska params
    ska_minfreq = "0.9"
    ska_alnargs = ""
    ska2_kszise = "31"
    // tools to use
    use_kraken2 = false
    kraken2_db = ""
    assembler = "shovill"
    mask = "no_mask"
    mlst_exclude = ""
    mobsuite_db = "no_db"
    gubbins = false
    cluster_threshold = '10'
    pangenome_groups = 'cluster'
    cluster_method = 'single'
    annot_cols = ''
    // references
    abritamr_ref = "Publication - https://doi.org/10.1038/s41467-022-35713-4 Tool - https://zenodo.org/records/12514579"
    shovill_ref = "Tool - https://github.com/tseemann/shovill"
    spades_ref = "Publication - https://doi.org/10.1002/cpbi.102, Tool - https://ablab.github.io/spades/"
    skesa_ref = "Publication - https://doi.org/10.1186/s13059-018-1540-z Tool - https://github.com/ncbi/SKESA"
    core_snp_filter_ref = "Publication - https://doi.org/10.1099/mgen.0.001346 Tool - https://github.com/rrwick/Core-SNP-filter"
    
    
}

conda {
   useMamba = true
}

profiles {

   lcl {
      params.publish_dir_mode = 'copy'
      executor {
         name = 'local'
         cpus = 64
      }
      process {
      
        withLabel: process_low {
             cpus= 1
          }
        withLabel: process_medium {
           cpus= 4
        }
        withLabel: process_high {
           cpus= 8
        }
      }
    }
     
 }
    emmtyper_ref = "Tool - https://github.com/MDU-PHL/emmtyper"
    gubbins_ref = "Publication - https://doi.org/10.1093/nar/gku1196 Tool - https://github.com/nickjcroucher/gubbins"
    iqtree_ref = "Publication - https://doi.org/10.1093/molbev/msaa015 Tool - https://iqtree.github.io"
    gotree_ref = "Tool - https://github.com/evolbioinfo/gotree"
    kleborate_ref = "Publication - https://doi.org/10.1038/s41467-021-24448-3 Tool - https://github.com/klebgenomics/Kleborate"

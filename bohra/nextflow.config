    mobsuite_ref = "Publication - https://doi.org/10.1099/mgen.0.000435 Tool - https://github.com/phac-nml/mob-suite"
    ngmaster_ref = "Tool - https://github.com/MDU-PHL/ngmaster"
    panaroo_ref = "Publication - https://doi.org/10.1186/s13059-020-02090-4 Tool - https://gthlab.au/panaroo/#/gettingstarted/quickstart"
    prokka_ref = "Publication - https://doi.org/10.1093/bioinformatics/btu153 Tool - https://github.com/tseemann/prokka"
    quicktree_ref = "Tool - https://github.com/khowe/quicktree"
